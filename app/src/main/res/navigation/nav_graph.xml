<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.fabiomarques.firebaselogin.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/to_subscribe"
            app:destination="@id/subscribeFragment" />
    </fragment>
    <fragment android:id="@+id/subscribeFragment"
        android:name="com.fabiomarques.firebaselogin.SubscribeFragment"
        android:label="Subscribe">
        <action android:id="@+id/to_login"
            app:destination="@id/loginFragment" />


</fragment>

</navigation>